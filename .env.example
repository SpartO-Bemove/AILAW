# Конфигурация телеграм-бота Neuralex

# Токен телеграм-бота (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# API ключ OpenAI (получить на https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# URL для подключения к Redis (по умолчанию локальный)
REDIS_URL=redis://localhost:6379/0

# ID администратора для получения уведомлений (замените на ваш Telegram ID)
ADMIN_CHAT_ID=your_admin_telegram_id_here

# Включить уведомления администратора (true/false)
ENABLE_ADMIN_NOTIFICATIONS=true

# Настройки логирования (опционально)
LOG_LEVEL=INFO